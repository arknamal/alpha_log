<h1>List of all Existing Articles</h1>

<p>
  <%= link_to "Create New Article", new_article_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>&nbsp&nbsp&nbspDescription</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td>&nbsp&nbsp&nbsp<%= article.description %></td>
      <td>&nbsp&nbsp&nbsp<%= link_to "Edit", edit_article_path(article) %></td>
      <td>&nbsp&nbsp&nbsp<%= link_to "Show", article_path(article) %></td>
      <td>&nbsp&nbsp&nbsp<%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'Home', root_path %>
</p>